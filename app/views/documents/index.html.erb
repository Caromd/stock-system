<h1>DOCUMENTS</h1>

<table>
  <thead>
    <tr>
      <th class="col-md-2"><%= sortable "code"%></th>
      <th class="col-md-2"><%= sortable "docdate", "Date"%></th>
      <th class="col-md-2"><%= sortable "users.username", "User"%></th>
      <th class="col-md-2"><%= sortable "locations.name", "Location"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td class="col-md-2"><%= link_to document.code, edit_document_path(document) %></td>
        <td class="col-md-2"><%= document.docdate %></td>
        <td class="col-md-2"><%= document.user.username %></td>
        <td class="col-md-2"><%= document.location.name %></td>
        <td class="col-md-1"><%= link_to 'PDF', pdf_path(document) %></td>
        <td><%= link_to 'X', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path, id: "button"  %>
