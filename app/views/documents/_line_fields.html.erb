<div class="form-inline table">
  <div class="nested-fields">
    <%= f.text_field :item,  prompt: "Item", label: false %>
    <%= f.text_field :qtynew, label: false, placeholder: "Quantity New", :input_html => {value: number_with_precision(f.object.qtynew, precision: 0), :id => 'result_fields'} %>
    <%= f.text_field :qtyused, label: false, placeholder: "Quantity Used", :input_html => {value: number_with_precision(f.object.qtyused, precision: 0), :id => 'result_fields'} %>
    <%= f.text_field :comment, label: false, placeholder: "Comment" %>
  </div>
</div>