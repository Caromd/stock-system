<h1>LOCATIONS</h1>

<table>
  <thead>
    <tr>
      <th class="col-md-3">Name</th>
      <th class="col-md-1"></th>
      <th class="col-md-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td class="col-md-3"><%= link_to location.name, edit_location_path(location) %></td>
        <td class="col-md-1"><%= link_to 'Details', location %></td>
        <td class="col-md-1"><%= link_to 'X', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>