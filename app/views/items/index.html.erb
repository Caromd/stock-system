<h1>ITEMS</h1>

<table>
  <thead>
    <tr>
      <th class="col-md-1">Code</th>
      <th class="col-md-1">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="col-md-1"><%= item.code %></td>
        <td class="col-md-2"><%= item.description %></td>
        <td class="col-md-1"><%= link_to 'Show', item %></td>
        <td class="col-md-1"><%= link_to 'Edit', edit_item_path(item) %></td>
        <td class="col-md-1"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
