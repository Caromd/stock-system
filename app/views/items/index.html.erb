<h1>ITEMS</h1>

<table>
  <thead>
    <tr>
      <th class="col-md-2"><%= sortable "code"%></th>
      <th class="col-md-7"><%= sortable "description"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="col-md-2"><%= link_to item.code, edit_item_path(item) %></td>
        <td class="col-md-7"><%= item.description %></td>
        <td><%= link_to 'X', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
